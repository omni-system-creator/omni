<Window x:Class="OmsDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:OmsDesktop"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="OMS Desktop" Height="650" Width="960"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/logo.ico">
    
    <Window.Resources>
        <!-- Shadow Border Style -->
        <Style x:Key="ShadowBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="Black" />
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                    <Setter Property="Effect" Value="{x:Null}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Main Container Style (Handles Margin) -->
        <Style x:Key="MainContainerStyle" TargetType="Grid">
            <Setter Property="Margin" Value="10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="Margin" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Left Column Border Style -->
        <Style x:Key="LeftColumnBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4,0,0,4" />
            <Setter Property="Background" Value="{DynamicResource SidebarBackground}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Right Column Border Style -->
        <Style x:Key="RightColumnBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="0,4,4,0" />
            <Setter Property="Background" Value="{DynamicResource ContentBackground}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Input Area Border Style -->
        <Style x:Key="InputAreaBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource InputAreaBackground}" />
            <Setter Property="BorderThickness" Value="0,1,0,0" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="CornerRadius" Value="0,0,4,0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Stroke Border Style -->
        <Style x:Key="WindowStrokeStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="IsHitTestVisible" Value="False" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                    <Setter Property="BorderThickness" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Grid>
        <!-- Taskbar Icon -->
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        ToolTipText="OMS Desktop"
                        IconSource="pack://application:,,,/logo.ico"
                        MenuActivation="LeftOrRightClick">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="打开主面板" Click="ShowWindow_Click" />
                    <MenuItem Header="退出登录" Click="Logout_Click" />
                    <Separator />
                    <MenuItem Header="退出" Click="Exit_Click" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>

        <!-- Main Container -->
        <Grid Style="{StaticResource MainContainerStyle}">
            
            <!-- Layer 1: Shadow Background -->
            <Border Style="{StaticResource ShadowBorderStyle}" />

            <!-- Layer 2: Content -->
            <Grid MouseLeftButtonDown="Window_MouseDown" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Left Sidebar (Icons) -->
                <Border Grid.Column="0" Style="{StaticResource LeftColumnBorderStyle}">
                    <Grid>
                        <StackPanel Margin="0,30,0,0">
                        <!-- User Avatar -->
                        <Border Width="36" Height="36" CornerRadius="4" Margin="0,0,0,20">
                            <Border.Background>
                                <ImageBrush x:Name="UserAvatar" ImageSource="pack://application:,,,/logo.png" Stretch="UniformToFill" />
                            </Border.Background>
                        </Border>
                        
                        <!-- Nav Icons -->
                        <ListBox Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="{DynamicResource SidebarIconForeground}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Border" Padding="10" Background="Transparent" Cursor="Hand">
                                                    <ContentPresenter HorizontalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                                        <Setter Property="Foreground" Value="{DynamicResource BrandColor}" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource SidebarIconHover}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBoxItem IsSelected="True">
                                <materialDesign:PackIcon Kind="ChatProcessing" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <materialDesign:PackIcon Kind="CubeOutline" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <materialDesign:PackIcon Kind="FolderOutline" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                            <ListBoxItem>
                                <materialDesign:PackIcon Kind="Cellphone" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                            <ListBoxItem Margin="0,30,0,0">
                                <materialDesign:PackIcon Kind="CogOutline" Width="24" Height="24" Foreground="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}" />
                            </ListBoxItem>
                        </ListBox>
                        </StackPanel>
                        
                        <!-- Bottom Actions -->
                        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,20">
                            <Button Style="{StaticResource MaterialDesignFlatButton}" Foreground="#999" Padding="0" Click="Menu_Click">
                                <materialDesign:PackIcon Kind="Menu" Width="24" Height="24" />
                                <Button.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="深色模式" Click="ThemeDark_Click" />
                                        <MenuItem Header="浅色模式" Click="ThemeLight_Click" />
                                        <MenuItem Header="跟随系统" Click="ThemeSystem_Click" />
                                        <Separator />
                                        <MenuItem Header="退出登录" Click="Logout_Click" />
                                    </ContextMenu>
                                </Button.ContextMenu>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Middle List (Chats) -->
                <Grid Grid.Column="1" Background="{DynamicResource ChatListBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <DockPanel Grid.Row="0" VerticalAlignment="Center" Margin="15,0">
                <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignToolButton}" Padding="4" Margin="5,0,0,0" Width="24" Height="24">
                    <materialDesign:PackIcon Kind="Plus" Width="20" Height="20" Foreground="{DynamicResource IconForeground}" />
                </Button>
                <Border Background="{DynamicResource SearchBarBackground}" CornerRadius="4" Height="26">
                    <Grid>
                        <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center" Margin="6,0,0,0" />
                        <TextBlock Text="搜索" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center" Margin="28,0,0,0" FontSize="12" />
                    </Grid>
                </Border>
            </DockPanel>

            <!-- Chat List -->
            <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0" Padding="0">
                <ListBoxItem Padding="15,10">
                    <Grid Width="220">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="4" Background="{DynamicResource AvatarPlaceholder}">
                            <materialDesign:PackIcon Kind="Face" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                        </Border>
                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="文件传输助手" FontSize="14" Foreground="{DynamicResource TextPrimary}" />
                            <TextBlock Text="[图片]" FontSize="12" Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" />
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="12:30" FontSize="12" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Top" />
                    </Grid>
                </ListBoxItem>
                
                <ListBoxItem Padding="15,10" Background="{DynamicResource ListItemSelected}">
                    <Grid Width="220">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="40" Height="40" CornerRadius="4" Background="#07C160">
                            <materialDesign:PackIcon Kind="Monitor" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                        </Border>
                        <StackPanel Grid.Column="1" Margin="10,0">
                            <TextBlock Text="硬件监控" FontSize="14" Foreground="{DynamicResource TextPrimary}" />
                            <TextBlock Text="CPU温度正常" FontSize="12" Foreground="{DynamicResource TextSecondary}" Margin="0,4,0,0" />
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="刚刚" FontSize="12" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Top" />
                    </Grid>
                </ListBoxItem>
            </ListBox>
                </Grid>

                <!-- Right Content -->
                <Border Grid.Column="2" Style="{StaticResource RightColumnBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> <!-- Custom Title Bar Area -->
                    <RowDefinition Height="Auto" /> <!-- Chat Header -->
                    <RowDefinition Height="*" />    <!-- Content -->
                </Grid.RowDefinitions>

            <!-- Window Controls (Top Right) -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Panel.ZIndex="1000">
                <!-- Organization Switcher -->
                <ComboBox x:Name="OrgSwitcher" 
                          Margin="0,2,10,0"
                          Width="120"
                          Height="26"
                          FontSize="12"
                          Padding="4,2"
                          Style="{StaticResource MaterialDesignComboBox}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectionChanged="OrgSwitcher_SelectionChanged"
                          Background="Transparent"
                          Foreground="{DynamicResource TextPrimary}"
                          VerticalContentAlignment="Center">
                    <ComboBox.Resources>
                         <SolidColorBrush x:Key="MaterialDesignPaper" Color="White" />
                    </ComboBox.Resources>
                </ComboBox>

                <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Minimize_Click" Width="30" Height="30" Padding="0">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16" Foreground="{DynamicResource IconForeground}" />
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Maximize_Click" Width="30" Height="30" Padding="0">
                    <materialDesign:PackIcon Kind="WindowMaximize" Width="16" Height="16" Foreground="{DynamicResource IconForeground}" />
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}" Click="Close_Click" Width="30" Height="30" Padding="0"
                        MouseEnter="CloseButton_MouseEnter" MouseLeave="CloseButton_MouseLeave" x:Name="BtnClose">
                    <materialDesign:PackIcon Kind="WindowClose" Width="16" Height="16" Foreground="{DynamicResource IconForeground}" x:Name="IconClose" />
                </Button>
            </StackPanel>

            <!-- Chat Header -->
            <Border Grid.Row="1" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderBrush}" Padding="25,20,20,15">
                <DockPanel>
                    <TextBlock Text="硬件监控" FontSize="20" FontWeight="Medium" Foreground="{DynamicResource TextPrimary}" />
                    <Button DockPanel.Dock="Right" Style="{StaticResource MaterialDesignToolButton}" HorizontalAlignment="Right">
                        <materialDesign:PackIcon Kind="DotsHorizontal" Foreground="{DynamicResource IconForeground}" />
                    </Button>
                </DockPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,150">
                    <StackPanel Margin="30">
                        <!-- Message 1 -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="36" Height="36" CornerRadius="4" Background="#07C160" VerticalAlignment="Top">
                                <materialDesign:PackIcon Kind="Monitor" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                            </Border>
                            <Border Grid.Column="1" Margin="10,0,50,0" Background="{DynamicResource InputAreaBackground}" CornerRadius="4" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="当前系统状态：" FontWeight="Bold" Margin="0,0,0,8" Foreground="{DynamicResource TextPrimary}" />
                                    <TextBlock x:Name="SystemInfoText" TextWrapping="Wrap" LineHeight="20" Text="正在获取数据..." Foreground="{DynamicResource TextPrimary}" />
                                    <Button Margin="0,10,0,0" Content="刷新数据" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignOutlinedButton}" Height="28" Click="RefreshHardwareInfo_Click" />
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                         <!-- Message 2 (File) -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="36" Height="36" CornerRadius="4" Background="#07C160" VerticalAlignment="Top">
                                <materialDesign:PackIcon Kind="Monitor" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                            </Border>
                            <Border Grid.Column="1" Margin="10,0,50,0" Background="{DynamicResource InputAreaBackground}" CornerRadius="4" Padding="12">
                                <StackPanel>
                                    <DockPanel LastChildFill="True">
                                        <materialDesign:PackIcon Kind="FileDocument" Width="40" Height="40" Foreground="#F5A623" DockPanel.Dock="Left" Margin="0,0,10,0" />
                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="文件读取测试" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" />
                                            <TextBlock Text="支持大文件异步读取" FontSize="12" Foreground="{DynamicResource TextSecondary}" />
                                        </StackPanel>
                                    </DockPanel>
                                    <Button Margin="0,10,0,0" Content="打开文件" HorizontalAlignment="Left" Style="{StaticResource MaterialDesignFlatButton}" Height="28" Click="OpenFile_Click" />
                                    <TextBlock x:Name="FileContentText" Margin="0,8,0,0" FontSize="11" Foreground="{DynamicResource TextSecondary}" TextWrapping="Wrap" MaxHeight="100" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

                <!-- Input Area (Bottom Fixed) -->
                <Border Style="{StaticResource InputAreaBorderStyle}" VerticalAlignment="Bottom" Height="150">
                    <Grid Margin="20,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        
                        <!-- Toolbar -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Button Style="{StaticResource MaterialDesignToolButton}" Padding="4">
                                <materialDesign:PackIcon Kind="Emoticon" Width="24" Height="24" Foreground="{DynamicResource IconForeground}" />
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}" Padding="4">
                                <materialDesign:PackIcon Kind="Folder" Width="24" Height="24" Foreground="{DynamicResource IconForeground}" />
                            </Button>
                            <Button Style="{StaticResource MaterialDesignToolButton}" Padding="4">
                                <materialDesign:PackIcon Kind="ContentCut" Width="24" Height="24" Foreground="{DynamicResource IconForeground}" />
                            </Button>
                        </StackPanel>
                        
                        <!-- Text Box -->
                        <TextBox Grid.Row="1" BorderThickness="0" Background="Transparent" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                 Foreground="{DynamicResource TextPrimary}" CaretBrush="{DynamicResource TextPrimary}">
                        </TextBox>
                        
                        <!-- Send Button -->
                        <Button Grid.Row="2" Content="发送(S)" HorizontalAlignment="Right" Width="80" Background="{DynamicResource SendButtonBackground}" Foreground="{DynamicResource SendButtonForeground}" BorderThickness="0" />
                    </Grid>
                </Border>
            </Grid>
            </Grid>
        </Border>
        </Grid>
        
        <!-- Layer 3: Stroke Border -->
        <Border Style="{StaticResource WindowStrokeStyle}" />
    </Grid>
</Grid>
</Window>
